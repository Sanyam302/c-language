#include<stdio.h>

int main(){
    for(int i=1;i<=4;i++){
        for(int j=1;j<=4-i;j++){
            printf(" ");
        }
        for(int k=1;k<=i +3;k++){
            
            printf("*");

        }
        int k;
        for(int m=1;m<=i;m++){
                printf("#");
            }
        printf("\n");
    }
    return 0;
}